# -----------------------------------------------------------------
# QQ 平台机器人配置
# -----------------------------------------------------------------
bot:
  appid: "YOUR_BOT_APPID"          # 替换为你的机器人APPID
  token: "YOUR_BOT_TOKEN"          # 替换为你的机器人Token
  secret: "YOUR_BOT_SECRET"        # 替换为你的机器人Secret
  sandbox: true                    # 是否使用沙箱环境

# -----------------------------------------------------------------
# 调试与开发配置
# -----------------------------------------------------------------
debug:
  enabled: true

# -----------------------------------------------------------------
# API 服务器配置 (用于对外提供图片等资源访问)
# -----------------------------------------------------------------
server:
  api:
    enabled: true                  # 是否启用 FastAPI 服务器
    host: "0.0.0.0"
    port: 8080
    external_url: "http://127.0.0.1:8080"

# -----------------------------------------------------------------
# Redis 缓存配置
# -----------------------------------------------------------------
redis:
  host: 127.0.0.1
  port: 6379
  db: 0
  password: ""
  timeout: 5

# -----------------------------------------------------------------
# API 缓存配置
# -----------------------------------------------------------------
cache:
  # 统一缓存更新间隔（秒）
  update_interval: 90
  # 启动时立即更新
  immediate_update: true
  # API请求间隔（秒），避免触发限速
  request_delay: 5
  # 缓存更新失败时的重试延迟（秒）
  retry_delay: 30

# -----------------------------------------------------------------
# 翻译服务配置 (可选)
# -----------------------------------------------------------------
translation:
  # AI翻译API配置
  api_url: "https://ai-translator.cc/api/translate"
  # 请求超时时间（秒）
  timeout: 30
  # 重试配置
  retry:
    base_delay: 2.0
    max_delay: 30.0
    increment: 3.0

# -----------------------------------------------------------------
# 浏览器服务配置 (用于截图等高级功能)
# -----------------------------------------------------------------
browser:
  enabled: false # 默认禁用，因为大多数功能不需要